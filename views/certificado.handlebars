{{#with certificado}}
<head>
    <link rel="stylesheet" href="/css/certificado.css"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body class="justify-content-center">
    <div class="container text-center my-3 p-2 border border-black">
        <div >
            <h1 >Certificado de Conclusão</h1>

            <p>
                É concedido a 
                <strong>
                    {{nome}}
                </strong>
            </p>
            <p>
                Por ter concluído com sucesso o curso de 
                <strong>
                    {{curso}}
                </strong>
            </p>

            <p>
                Com carga horário de {{horas}} horas
            </p>
            <div class="d-flex justify-content-around">
                <img src="../assets/selo.png" alt="Selo de Certificação" id="selo">
                <div>
                    <img src="../assets/assinatura.png" id="ass-neymar">
                    <hr/>
                </div>
            </div>
            <div>
                <img src="../assets/logo-instituicao.png" alt="Logotipo da Instituição" id="logo">
                <p class="date">Data de Emissão: {{date}}</p>
                <div class="footer">
                    <p>&copy; Caio Academy 2023</p>
                </div>      
            </div>
        
        </div>
    </div>
    
</body>
    


{{/with}}